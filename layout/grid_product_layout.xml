<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridlayout_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/slider_background"
    android:elevation="3dp">

    <TextView
        android:id="@+id/grid_product_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Trending"
        android:textColor="#FFAC06"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/grid_product_viewAll_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/grid_product_viewAll_btn" />

    <Button
        android:id="@+id/grid_product_viewAll_btn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/resetBtn"
        android:text="view all"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/grid_product_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grid_product_viewAll_btn"
        app:rowCount="2"
        tools:visibility="visible">

        <include
            layout="@layout/horizontal_scroll_item_layout"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <include
            layout="@layout/horizontal_scroll_item_layout"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <include
            layout="@layout/horizontal_scroll_item_layout"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <include
            layout="@layout/horizontal_scroll_item_layout"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1" />

    </androidx.gridlayout.widget.GridLayout>

    <View
        android:id="@+id/divider21"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/recyclerViewColor"
        app:layout_constraintBottom_toBottomOf="@+id/grid_product_container"
        app:layout_constraintEnd_toEndOf="@+id/grid_product_container"
        app:layout_constraintStart_toStartOf="@+id/grid_product_container"
        app:layout_constraintTop_toTopOf="@+id/grid_product_container" />

    <View
        android:id="@+id/divider22"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/recyclerViewColor"
        app:layout_constraintBottom_toBottomOf="@+id/grid_product_container"
        app:layout_constraintEnd_toEndOf="@+id/grid_product_container"
        app:layout_constraintStart_toStartOf="@+id/grid_product_container"
        app:layout_constraintTop_toTopOf="@+id/grid_product_container" />


</androidx.constraintlayout.widget.ConstraintLayout>