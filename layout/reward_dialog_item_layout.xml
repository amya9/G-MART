<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:backgroundTint="#f6f6f6"
    android:background="@drawable/quantity_boarder">

    <TextView
        android:id="@+id/my_reward_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Discount coupon"
        android:textColor="@color/colorBlack"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/my_rewards_image_indicator_iv"
        app:layout_constraintStart_toEndOf="@+id/my_rewards_image_indicator_iv"
        app:layout_constraintTop_toTopOf="@+id/my_rewards_image_indicator_iv" />

    <TextView
        android:id="@+id/my_rewards_validity_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="10sp"
        android:text="till 3rd, August 2018"
        android:textColor="@color/colorBlack"
        android:background="@drawable/quantity_boarder"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/my_reward_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/my_rewards_image_indicator_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/my_rewards" />

    <TextView
        android:id="@+id/my_rewards_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:ems="20"
        android:singleLine="false"
        android:textSize="12sp"
        android:text="GET 20% OFF on any product above Rs.500/- and below Rs.2500/-"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/my_rewards_image_indicator_iv"
        app:layout_constraintTop_toBottomOf="@+id/my_reward_title" />
</androidx.constraintlayout.widget.ConstraintLayout>